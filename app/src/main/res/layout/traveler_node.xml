<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true">
    <!-- set "clickable" to true -->
    <!-- Disable click through on items behind the drawer -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/traveler_horizontal_margin"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:paddingRight="@dimen/traveler_horizontal_margin"
        android:text="@string/download_creation_hints"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="?android:attr/listDivider" />
        <!-- android:background="@android:color/darker_gray" -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/traveler_horizontal_margin"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:paddingRight="@dimen/traveler_horizontal_margin"
        android:paddingBottom="@dimen/nav_header_vertical_spacing"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/category_title" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/category_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
